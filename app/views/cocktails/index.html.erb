<h3>Welcome to mister cocktail !</h3>
<h4>Here is the list of all our cocktails</h4>
<div class="content">
  <% @cocktails.each do |cocktail|%>
    <%= link_to cocktail_path(cocktail), class: "cocktail" do %>
      <div class="cocktail-card"
        style="background-image: url('http://res.cloudinary.com/dpmc03d5t/image/upload/v1487582980/Martini_yzsciz.jpg')">
        <%= cocktail.name %>
      </div>
    <% end %>
  <% end %>
</div>


<br>
<br>
<br>
<p><%= link_to "I want to add a new Cocktail", new_cocktail_path, class: "btn, btn-primary"  %></p>
